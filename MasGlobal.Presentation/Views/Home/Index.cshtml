@{
    ViewData["Title"] = "MasGlobal - Employees";
}
@model IndexViewModel

<form action="/" method="post">
    <div class="form-group">
        <label class="col-sm-4 col-form-label">Employee ID</label>
        <div class="col-sm-8">
            <input asp-for="SelectedEmployeeId" class="form-control" type="number" />
            <span asp-validation-for="SelectedEmployeeId" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" id="btn_Employees" class="btn btn-info btn-block">Get Employees</button>
</form>

@if (Model.Employees.Count() > 0)
{
    <partial name="_EmployeeGrid.cshtml" model="@Model.Employees" />
}
